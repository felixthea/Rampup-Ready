<!DOCTYPE html>
<html>
<head>
  <title>Workwiki</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_logged_in %>
    Hi, <%= current_user.email %>!
    <%= button_to "Log Out", session_url, method: :delete %>
  <% else %>
    <%= link_to "Log In", new_session_url %>
  <% end %>
<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<% if flash[:notice] %>
  <% flash[:notice].each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>

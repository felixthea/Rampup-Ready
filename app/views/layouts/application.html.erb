<!DOCTYPE html>
<html>
<head>
  <title>RampUpReady.com</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="top">
      <div class="nav group">
        <div class="nav-left">
          <div class="logo">
            <%= link_to 'LOGO', root_url %>
          </div>
          <div class="links">
            <ul>
              <li><%= link_to 'Words', words_url %></li>
              <li><%= link_to 'Curriculum', curriculums_url %></li>
            </ul>
          </div>
        </div>
        <div class="nav-right">
          <div class="user-info">
            <div class="name">
              JOHN DOE
            </div>
            <div class="avatar">
              PIC
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="search group">
      <div class="search-icon">
        <%= image_tag "search-2.png" %>
      </div>
      <div class="search-bar">
        <input class="word-search" type="text" placeholder="What word would you like to learn?">
      </div>
    </div>
    <div class="main">
      <%= yield %>
    </div>
    <footer>
    </footer>
  </div>
</body>
</html>

<script>
  var pusher = new Pusher('<%= ENV["PUSHER_KEY"] %>')
  var channel = pusher.subscribe("messages")
  channel.bind('new', function(data){
    $.ajax({
      url: '/notify_recipient',
      data: {recipient_id: data.recipient_id },
      type: 'get',
      dataType: 'json',
      success: function(data, response, xhr){
        if (data.current_user === "true") {
          $('.nav-bar-inbox a').html("Inbox" + data.message_count);
          $('div.notices').empty();
          $('div.notices').fadeIn();
          $('div.notices').removeClass('hidden');
          $('div.notices').append("You've received a new message!");
          window.setTimeout(function() {
            $('div.notices').fadeOut();
          }, 3000)
        }
      }
    })
  })
</script>


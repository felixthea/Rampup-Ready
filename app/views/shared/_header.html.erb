<header>
  <div class="top-header group">
    <div class="top-header-left">
      <div class="logo">
        <%= link_to image_tag("ud_logo.png"), root_url %>
      </div>
    </div>
    <div class="top-header-right">
      <div class="sign-in-up-out">
        <% if user_logged_in %>
          <p>Hi, <%= current_user.email %>!</p>
          <!-- <button class="log-out">Log Out</button> -->
          <%= button_to "Log Out", session_url, method: :delete, class: "submit" %>
        <% else %>
          <%= link_to "Log In", new_session_url %> | <%= link_to "Sign Up", new_user_url %>
        <% end %>
      </div>
      <div class="search">
        <form action="<%= search_url %>" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="text" name="keyword">
          <input type="Submit" class="submit" value="Search">
        </form>
      </div>
    </div>
  </div>
  <div class="bottom-header group">
    <nav>
      <ul class="group">
        <li><%= link_to "Words", words_url %></li>
        <li><%= link_to "Subdivisions", subdivisions_url %></li>
        <li><%= link_to "Curriculums", curriculums_url %></li>
        <li><%= link_to "Tags", tags_url %></li>
        <li><%= link_to "Add Users", bulk_new_users_url %></li>
        <% if user_logged_in %>
          <li class="nav-bar-inbox"><%= link_to "Inbox" + unread_messages, messages_url %></li>
  		    <li><%= link_to "Favorites", favorites_url %></li>
        <% end %>
      </ul>
      <div class="bottom-nav hidden">
        <ul class="inbox-options group">
			    <li><%= link_to "Compose New Message", new_message_url, id: "compose-new-message" %></li>
  				<li><%= link_to "Received Messages", messages_url %></li>
          <li><%= link_to "Sent Messages", sent_messages_url %></li>
  			</ul>
      </div>
    </nav>
  </div>
</header>
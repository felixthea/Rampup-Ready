<form action="<%= users_url %>" method="post">
  <label for="user_email">Email:</label>
  <input type="text" id="user_email" name="user[email]">
  <label for="user_password">Password:</label>
  <input type="password" id="user_password" name="user[password]">
  <select name="user[subdivision_id]">
    <% @subdivisions.each do |subdivision| %>
      <option value="<%= subdivision.id %>"><%= subdivision.name %></option>
    <% end %>
  </select>
  <label for="user_admin">Admin?</label>
  <input type="checkbox" name="user[admin]" id="user_admin" value="true">
  <input type="submit" value="Sign Up">
</form>
<div class="word" id="<%= word.id %>">
  <div class="word-name">
    <h2><%= link_to word.name, word_url(word.id) %></h2>
  </div>
  <div class="top-definition">
    <p>
      <% unless word.definitions.empty? %>
        <% word.definitions.sort! { |defA, defB| defB.total_score <=> defA.total_score } %>
        <%= word.definitions.first.body %>
      <% else %>
        No definitions, yet.
      <% end %>
    </p>
  </div>
  <div class="word-tags">
    <% if word.definitions.first && word.definitions.first.tags %>
      <% tags = word.definitions.first.tags %>
      <%= render partial: 'tags/tag', collection: tags, spacer_template: 'shared/comma' %>
    <% else %>
      No tags, yet.
    <% end %>
  </div>
</div>
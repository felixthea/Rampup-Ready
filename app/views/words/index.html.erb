<div class="words-wrapper group">
  <div class="add-words-form group">
    <h2>Add Word</h2>
    <form action="<%= words_url %>" method="post" data-remote="true" id="new-word-form">
      <label for="word_name">Word:</label>
      <input type="text" name="word[name]" id="word_name">
      <input type="submit" class="submit" value="Add Word">
    </form>
		<br>
		<strong>Build a curriculum</strong> that you can send to another member of your team.  <%= link_to "Click Here!", new_curriculum_url %>
  </div>
  <div class="words-list">
    <h2>Words</h2>
    <div class="words">
      <nav class="word-pages"><%= paginate @words %></nav>
      <%= render @words %>
      <nav class="word-pages"><%= paginate @words %></nav>
    </div>
  </div>
</div>

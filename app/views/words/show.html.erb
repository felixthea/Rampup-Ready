<div class="container-body group">
  <h2><%= @word.name %></h2>
  <div class="related-words">
    <%= render 'related_words' %>
  </div>
  <div class="word-defs">
    <h3>Definitions</h3>
    <div class="definitions">
      <ol>
        <%= render @definitions %>
      </ol>
    </div>
  </div>
  <div class="new-defs-form">
    <%= render '/definitions/new_defs' %>
  </div>
</div>

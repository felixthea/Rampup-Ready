<form action="<%= curriculum_url(@curriculum.id) %>" method="post">
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="curriculum_name">Curriculum:</label>
  <input type="text" name="curriculum[name]" id="curriculum_name" value="<%= @curriculum.name %>">
  <br>
  <label for="curriculum_description">Description:</label>
  <input type="text" id="curriculum_description" name="curriculum[description]" value="<%= @curriculum.description %>">
  <br>
  <ul>
    <input type="hidden" name="curriculum[definition_ids][]" value="">
    <% @definitions.each do |definition| %>
      <% checked = @curriculum.definitions.include?(definition) ? "checked" : "" %>
      <li>
        <input type="checkbox" name="curriculum[definition_ids][]" value="<%= definition.id %>" <%= checked.html_safe %>><%= definition.word.name %>: <%= definition.body %>
      </li>
    <% end %>
  </ul>
  <br>
  <input type="Submit" value="Update Curriculum">
</form>